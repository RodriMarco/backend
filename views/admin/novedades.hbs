        <div class="col-10">
            <p> Hola {{usuario}}
               
            </p>
            
        </div>
        <div class="col-2">
             <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesi√≤n
                    <i class="fa fa-sign-out"></i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-10 text-left">
            <h2 style="color: white;"> Listado Novedades</h2>
        </div>
